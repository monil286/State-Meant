<Window x:Class="Login.StudentLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="StudentLogin" Height="700" Width="1050" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded_1">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="login_background.png"/>
        </Grid.Background>
        <Label Margin="200, 15, 200, 540" Content="State-Meant" Foreground="Khaki" FontStyle="Normal" FontWeight="ExtraBold" FontFamily="Old English Text MT" FontSize="80" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Center" >
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="2"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <Label x:Name="WelcomeUser" Margin="300, 120, 300, 480" FontSize="50" FontFamily="Edwardian Script ITC" FontWeight="Bold" FontStyle="Italic" Content="Welcome User" Foreground="Gold" HorizontalAlignment="Center"/>
        <Button x:Name="TakeTest" Margin="220, 300, 580, 315" Background="BurlyWood" Foreground="Blue" FontFamily="Comic Sans MS" FontSize="18" FontStyle="Italic" FontWeight="Bold" Content="I want to take a test" Click="TakeTest_Click"/>
        <Button x:Name="ViewScore" Margin="580, 300, 220, 315" Background="BurlyWood" Foreground="Blue" FontFamily="Comic Sans MS" FontSize="18" FontStyle="Italic" FontWeight="Bold" Content="I want to view my scores" Click="ViewScore_Click"/>
        <Button x:Name="Cancel" Margin="445, 420, 445, 200" Content="Cancel" Background="BurlyWood" Foreground="Blue" FontFamily="Comic Sans MS" FontSize="18" FontStyle="Italic" FontWeight="Bold" Click="Cancel_Click" />
    </Grid>
</Window>
