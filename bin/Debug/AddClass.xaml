<Window x:Class="Login.AddClass"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AddClass" Height="700" Width="1050" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded_1">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="login_background.png"/>
        </Grid.Background>
        <Label Margin="200, 15, 200, 540" Content="State-Meant" Foreground="Khaki" FontStyle="Normal" FontWeight="ExtraBold" FontFamily="Old English Text MT" FontSize="80" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Center" >
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="2"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <Label Margin="300, 250, 600, 375" Content="Class Name : " FontFamily="Comic Sans MS" FontSize="18" Foreground="Gold" FontStyle="Italic" FontWeight="Bold"/>
        <TextBox x:Name="CNameTxt" Margin="450, 250, 450, 385" FontSize="18"/>
        <Label Margin="280, 300, 600, 325" Content="Class Teacher : " FontFamily="Comic Sans MS" FontSize="18" Foreground="Gold" FontStyle="Italic" FontWeight="Bold"/>
        <ComboBox x:Name="CTeacherCmb" Margin="450, 300, 450, 335" />
        <Button x:Name="Add_Class" Margin="300, 400, 620, 230" Content="Add Class" Background="BurlyWood" Foreground="Blue" FontFamily="Comic Sans MS" FontSize="18" FontStyle="Italic" FontWeight="Bold" Click="Add_Class_Click" />
        <Button x:Name="Back" Margin="450, 400, 470, 230" Content="Back" Background="BurlyWood" Foreground="Blue" FontFamily="Comic Sans MS" FontSize="18" FontStyle="Italic" FontWeight="Bold" Click="Back_Click" />
        <Button x:Name="Exit" Margin="600, 400, 320, 230" Content="Exit" Background="BurlyWood" Foreground="Blue" FontFamily="Comic Sans MS" FontSize="18" FontStyle="Italic" FontWeight="Bold" Click="Exit_Click" />
    </Grid>
</Window>
