<Window x:Class="Login.RemoveStudent"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RemoveStudent" Height="700" Width="1050" WindowStartupLocation="CenterScreen">
    
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="E:\StateMent\login_background.png"/>
        </Grid.Background>
        <Label Margin="200, 15, 200, 540" Content="State-Meant" Foreground="Khaki" FontStyle="Normal" FontWeight="ExtraBold" FontFamily="Old English Text MT" FontSize="80" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Center" >
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="2"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <Label x:Name="RemoveHeader" Margin="375, 150, 375,450" Content="Remove Student" FontSize="50" FontStyle="Italic" Foreground="Gold" FontFamily="Edwardian Script ITC" FontWeight="Bold"/>
        <Label x:Name="FindFNameLbl" Margin="325, 250, 560, 375" Content="First Name : " FontFamily="Comic Sans MS" FontSize="20" Foreground="Gold" FontWeight="Bold" FontStyle="Italic"/>
        <TextBox x:Name="FindFnameBtn"  Margin="490, 250, 400, 375"/>
        <Label x:Name="FindLNameLbl" Margin="330, 310, 560, 315" Content="Last Name : " FontFamily="Comic Sans MS" FontSize="20" Foreground="Gold" FontWeight="Bold" FontStyle="Italic"/>
        <TextBox x:Name="FindLnameBtn"  Margin="490, 310, 400, 315"/>
        <Button x:Name="Search" Content="Search for student" Margin="280,441,575,179" FontFamily="Comic Sans MS" FontSize="18" Background="BurlyWood" Foreground="Blue" FontStyle="Italic" FontWeight="Bold" Click="Search_Click"/>
        <Button x:Name="Back" Content="Back" Margin="480, 440, 425, 180" FontFamily="Comic Sans MS" FontSize="18" Background="BurlyWood" Foreground="Blue" FontStyle="Italic" FontWeight="Bold" Click="Back_Click"/>
        <Button x:Name="Exit" Content="Exit" Margin="640, 440, 275, 180" FontFamily="Comic Sans MS" FontSize="18" Background="BurlyWood" Foreground="Blue" FontStyle="Italic" FontWeight="Bold" Click="Exit_Click"/>
        <Button x:Name="Remove" Content="Remove Student" Margin="280, 440, 575, 180" FontFamily="Comic Sans MS" FontSize="18" Background="BurlyWood" Foreground="Blue" FontStyle="Italic" FontWeight="Bold" Visibility="Hidden" Click="Remove_Click"/>
        <DataGrid x:Name="Student_List" Margin="300, 250, 400, 315" Visibility="Hidden" AutoGenerateColumns="True"  BorderThickness="2" BorderBrush="Gold" />
        
    </Grid>
</Window>
