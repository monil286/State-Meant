
    <Window x:Class="Login.Login_Page"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="700" Width="1050" WindowStartupLocation="CenterScreen" >
    
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="login_background.png"/>
        </Grid.Background>
        <Label Margin="200, 15, 200, 540" Content="State-MEANT" Foreground="Khaki" FontStyle="Normal" FontWeight="ExtraBold" FontFamily="Old English Text MT" FontSize="65" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Center" >
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="2"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        
        <Label Margin="350,170,560,457" Content="User Name : " Foreground="Gold" FontStyle="Normal" FontWeight="Normal" FontFamily="Rockwell" FontSize="20"/>
        <TextBox x:Name="User_Name" Margin="490, 170, 460, 465" FontSize="15"/>
        <Label Margin="360,220,560,407" Content="Password : " Foreground="Gold" FontStyle="Normal" FontWeight="Normal" FontFamily="Rockwell" FontSize="20"/>
        <PasswordBox x:Name="Password" Margin="490,220,460,415" FontSize="15"/>
        <Button x:Name="Register" Content="I am New" Margin="320, 280, 600, 352" Click="Register_Click" Background="BurlyWood" FontFamily="comic sans ms" FontSize="18" FontStyle="Italic" FontWeight="ExtraBold" Foreground="Blue"/>
        <Button x:Name="Login" Content="Get me In!!" Margin="455,280,455,352" Click="Login_Click"  Background="BurlyWood" FontFamily="comic sans ms" FontSize="18" FontStyle="Italic" FontWeight="ExtraBold" Foreground="Blue"/>
        <Button x:Name="Cancel" Content="Get me out" Margin="600, 280, 320, 352" Click="Cancel_Click" Background="BurlyWood" FontFamily="comic sans ms" FontSize="18" FontStyle="Italic" FontWeight="ExtraBold" Foreground="Blue"/>
        <TextBox x:Name="Role_ID" Margin="455, 300, 455, 342" Visibility="Hidden" />
    </Grid>
</Window>
