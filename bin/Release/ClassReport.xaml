<Window x:Class="Login.ClassReport"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ClassReport" Height="700" Width="1050" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="login_background.png"/>
        </Grid.Background>
        <Label Margin="200, 15, 200, 540" Content="State-Meant" Foreground="Khaki" FontStyle="Normal" FontWeight="ExtraBold" FontFamily="Old English Text MT" FontSize="80" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Center" >
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="2"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <DataGrid x:Name="report" Margin="307,200,293,200" BorderBrush="Gold" AutoGenerateColumns="True" CanUserAddRows="False" CanUserDeleteRows="False"/>
        <Button x:Name="back" Margin="356,520,564,100" Background="BurlyWood" Foreground="Blue" Content="Back" FontFamily="Comic Sans MS" FontSize="18" FontStyle="Italic" FontWeight="Bold" Click="back_Click"/>
        <Button x:Name="exit" Margin="581,520,339,100" Background="BurlyWood" Foreground="Blue" Content="Exit" FontFamily="Comic Sans MS" FontSize="18" FontStyle="Italic" FontWeight="Bold" Click="exit_Click"/>
    </Grid>
</Window>
